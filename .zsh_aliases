# server
alias server-start="echo 'Starting.....' && \
    sudo systemctl start php-fpm.service && \
	sudo systemctl start httpd.service && \
	echo 'httpd.service started!' && \
	sudo systemctl start mariadb.service && \
	echo 'mariadb.service started!' && \
	echo 'Done!'"
alias server-status="echo 'Checking.....\n' && \
	sudo systemctl status httpd.service && \
	sudo systemctl status mariadb.service && \
	echo 'Done!'"
alias server-stop="echo 'Stopping.....' && \
	sudo systemctl stop httpd.service && \
	echo 'httpd.service stopped!' && \
	sudo systemctl stop mariadb.service && \
	echo 'mariadb.service stopped!' && \
	echo 'Done!'"

# docker 
alias kali="docker run -it \
	--privileged \
	--network host \
	-u 1000:1000 \
	--cpus 4 \
	-e DISPLAY=$DISPLAY \
	-e USER=$USER \
	-v /usr/share/oh-my-zsh:/usr/share/oh-my-zsh \
	-v /usr/share/zsh-theme-powerlevel10k:/usr/share/zsh-theme-powerlevel10k \
	-v /tmp:/tmp \
	-v /root:/root \
	-v $HOME:$HOME \
	-w $HOME \
	kalilinux \
	"
